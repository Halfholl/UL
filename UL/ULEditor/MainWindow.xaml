<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="统一语言编辑器" 
        Height="450" Width="800" 
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="treeView" Margin="0,31,110,0"/>
        <Menu x:Name="menu" VerticalAlignment="Top" Height="21" Grid.ColumnSpan="2">
            <MenuItem Header="文件"></MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" Margin="140,31,0,0" Grid.ColumnSpan="2">
            <TabItem Header="C#">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Lua">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="C++">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Blueprint">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
